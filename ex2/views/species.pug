extends layout

block content

    .w3-card-4
        header.w3-pale-red
            h2.w3-margin Espécie "#{speciesName} (#{cientificName})"

        .w3-container
            table.w3-table-all
                tr
                    th Id
                    th Freguesia
                    th Espécie
                    th Estado
                    th Número de Intervenções

                each plant in plants
                    tr
                        td
                            a(href=`http://localhost:15031/${plant._id}`)= plant._id

                        td= plant["Freguesia"]

                        td
                            a(href=`http://localhost:15031/especies/${plant["Espécie"]}`)= plant["Espécie"]

                        td= plant["Estado"]

                        td= plant["Número de intervenções"]

        footer.w3-container.w3-pale-red.w3-margin-top
            h5 Generated by Guilherme Sampaio - #[a(href="/") Voltar à página principal]