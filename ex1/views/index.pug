extends layout

block content
  .modal(id='display')
  .w3-card-4

    header.w3-pale-blue
      h2.w3-margin File Upload

    form.w3-container(action='/files', method='POST', enctype='multipart/form-data')

      label.w3-text-pale-blue.w3-margin-top
        b Select File

      input.w3-input.w3-border.w3-light-grey.w3-margin-bottom(type='file', name='uploadedFile')

      label.w3-text-pale-blue.w3-margin-top
        b File Description

      input.w3-input.w3-border.w3-light-grey.w3-margin-bottom(type='text', name='desc')

      input.w3-btn.w3-pale-blue.w3-margin-bottom(type='submit', value='Send')

  .w3-card-4
    header.w3-pale-red
      h2.w3-margin File List

    .w3-container
      table.w3-table-all
        tr
          th File Name
          th File Size
          th File Type
          th Upload Date

        each file in files
          tr(onclick='showImage(\"' + file.name + '\", \"' + file.mimetype + '\")')
            td= file.name
            td= file.size
            td= file.mimetype
            td= file.date

    footer.w3-container.w3-pale-red.w3-margin-top
      address Generated by gweebg